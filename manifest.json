{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "cookies",
    "scripting",
    "webNavigation",
    "identity",
    "storage"
  ],
  "host_permissions": [
    "*://*/checkouts/*",
    "*://*/cart*",
    "https://af8a61e2e155.ngrok-free.app/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "ui-popup.html",
        "transparent-logo.png",
        "party-horn.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "hello_extensions.png"
  }
}
